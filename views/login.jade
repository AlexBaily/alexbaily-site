html
  head
    link(href='css/main.css', rel='stylesheet')
    title= title
    script(src='js/jquery-3.2.1.js')
    script(src='js/login.js')
  body
   div(class='navbar')
   p= 'Login'
   form(method="post" class="login-form" id="login-form" name="login-form")
     label(for="username") Username
       input(type="text", name="username" required="true" autocomplete="off")
     label(for="password") Password
       input(type="password", name="password" required="true" autocomplete="off")
     input(type="submit", value="Sign in")
   p.
     <a href="/">Go back to home.</a>
